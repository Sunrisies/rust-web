{
  "openapi": "3.1.0",
  "info": {
    "title": "Rust Web API",
    "description": "一个简单的Rust web API",
    "termsOfService": "https://www.rust-web-api.com/terms",
    "contact": {
      "name": "Sunrisies",
      "url": "https://github.com/Sunrisies/rust-web",
      "email": "3266420686@qq.com"
    },
    "license": {
      "name": ""
    },
    "version": "1.0"
  },
  "paths": {
    "/api/auth/login": {
      "post": {
        "tags": [
          "鉴权模块"
        ],
        "operationId": "用户登录",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "登录成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleRespData"
                }
              }
            }
          },
          "400": {
            "description": "验证错误",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleRespData"
                }
              }
            }
          },
          "404": {
            "description": "用户名不存在",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleRespData"
                }
              }
            }
          },
          "500": {
            "description": "服务器内部错误",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleRespData"
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/permission": {
      "get": {
        "tags": [
          "鉴权模块"
        ],
        "operationId": "获取指定用户权限",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PermissionRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "获取权限成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleRespData"
                }
              }
            }
          },
          "400": {
            "description": "权限ID格式错误",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleRespData"
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/permissions": {
      "get": {
        "tags": [
          "鉴权模块"
        ],
        "operationId": "获取权限列表",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "default": null
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "获取权限列表成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleRespData"
                }
              }
            }
          }
        }
      }
    },
    "/api/auth/register": {
      "post": {
        "tags": [
          "鉴权模块"
        ],
        "operationId": "用户注册",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterResponse"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "注册成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleRespData"
                }
              }
            }
          },
          "400": {
            "description": "验证错误",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleRespData"
                }
              }
            }
          },
          "409": {
            "description": "用户名已存在",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleRespData"
                }
              }
            }
          },
          "500": {
            "description": "服务器内部错误",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleRespData"
                }
              }
            }
          }
        }
      }
    },
    "/api/categories": {
      "post": {
        "tags": [
          "分类"
        ],
        "operationId": "创建分类",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CategoryRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "创建分类成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleRespData"
                }
              }
            }
          },
          "400": {
            "description": "分类名称已存在",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleRespData"
                }
              }
            }
          },
          "500": {
            "description": "创建分类失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleRespData"
                }
              }
            }
          }
        }
      }
    },
    "/api/users": {
      "get": {
        "tags": [
          "用户模块"
        ],
        "operationId": "获取用户列表",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PaginationQuery"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "获取用户列表成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CommonResponse_UserDto"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CategoryRequest": {
        "type": "object",
        "required": [
          "name",
          "type"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "$ref": "#/components/schemas/Type"
          }
        }
      },
      "CommonResponse_UserDto": {
        "type": "object",
        "required": [
          "code",
          "message",
          "data"
        ],
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32",
            "minimum": 0
          },
          "data": {
            "type": "object",
            "required": [
              "user_name",
              "email",
              "pass_word"
            ],
            "properties": {
              "binding": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "email": {
                "type": "string"
              },
              "image": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "pass_word": {
                "type": "string"
              },
              "permissions": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "phone": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "role": {
                "type": [
                  "string",
                  "null"
                ]
              },
              "user_name": {
                "type": "string"
              }
            }
          },
          "message": {
            "type": "string"
          }
        }
      },
      "LoginRequest": {
        "type": "object",
        "required": [
          "user_name",
          "pass_word"
        ],
        "properties": {
          "pass_word": {
            "type": "string"
          },
          "user_name": {
            "type": "string"
          }
        }
      },
      "PaginationQuery": {
        "type": "object",
        "properties": {
          "limit": {
            "type": [
              "integer",
              "null"
            ],
            "format": "int64",
            "minimum": 0
          },
          "page": {
            "type": [
              "integer",
              "null"
            ],
            "format": "int64",
            "minimum": 0
          }
        }
      },
      "PermissionRequest": {
        "type": "object",
        "properties": {
          "permissions": {
            "type": "string"
          }
        }
      },
      "RegisterResponse": {
        "type": "object",
        "required": [
          "user_name",
          "pass_word"
        ],
        "properties": {
          "pass_word": {
            "type": "string"
          },
          "user_name": {
            "type": "string"
          }
        }
      },
      "SimpleRespData": {
        "type": "object",
        "required": [
          "data",
          "message"
        ],
        "properties": {
          "data": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "Type": {
        "type": "string",
        "enum": [
          "Article",
          "Library"
        ]
      },
      "UserDto": {
        "type": "object",
        "required": [
          "user_name",
          "email",
          "pass_word"
        ],
        "properties": {
          "binding": {
            "type": [
              "string",
              "null"
            ]
          },
          "email": {
            "type": "string"
          },
          "image": {
            "type": [
              "string",
              "null"
            ]
          },
          "pass_word": {
            "type": "string"
          },
          "permissions": {
            "type": [
              "string",
              "null"
            ]
          },
          "phone": {
            "type": [
              "string",
              "null"
            ]
          },
          "role": {
            "type": [
              "string",
              "null"
            ]
          },
          "user_name": {
            "type": "string"
          }
        }
      }
    }
  }
}
