{
  "openapi": "3.1.0",
  "info": {
    "title": "mysql_user_crud",
    "description": "A RESTful CRUD API for user management with MySQL",
    "contact": {
      "name": "Your Name",
      "email": "your.email@example.com"
    },
    "license": {
      "name": ""
    },
    "version": "0.1.0"
  },
  "paths": {
    "/categories": {
      "post": {
        "tags": [
          "categories"
        ],
        "operationId": "create_category",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CategoryRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "创建分类成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleRespData"
                }
              }
            }
          },
          "400": {
            "description": "分类名称已存在",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleRespData"
                }
              }
            }
          },
          "500": {
            "description": "创建分类失败",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SimpleRespData"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CategoryRequest": {
        "type": "object",
        "required": [
          "name",
          "type"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "type": {
            "$ref": "#/components/schemas/Type"
          }
        }
      },
      "SimpleRespData": {
        "type": "object",
        "required": [
          "data",
          "message"
        ],
        "properties": {
          "data": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "Type": {
        "type": "string",
        "enum": [
          "Article",
          "Library"
        ]
      }
    }
  }
}
